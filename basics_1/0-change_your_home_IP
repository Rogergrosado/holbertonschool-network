#!/usr/bin/env bash

# Backup the original /etc/hosts file
sudo cp /etc/hosts /etc/hosts.backup

# Update localhost IP to 127.0.0.2
if grep -q "127.0.0.1 localhost" /etc/hosts; then
    # Replace 127.0.0.1 with 127.0.0.2
    sudo sed 's/127.0.0.1/127.0.0.2/' /etc/hosts > /tmp/hosts && sudo mv /tmp/hosts /etc/hosts
else
    # If no localhost entry found, append it
    echo "127.0.0.2 localhost" | sudo tee -a /etc/hosts
fi

# Update facebook.com to resolve to 8.8.8.8
if ! grep -q "facebook.com" /etc/hosts; then
    # If no entry for facebook.com, append it
    echo "8.8.8.8 facebook.com" | sudo tee -a /etc/hosts
else
    # If facebook.com entry found, update it
    sudo sed 's/^.*facebook.com/8.8.8.8 facebook.com/' /etc/hosts > /tmp/hosts && sudo mv /tmp/hosts /etc/hosts
fi

